<div>
	<br><br/><br>
	<h1>Uppdatera framträdnde</h1>
	<%= form_for @performance do |f| %>
		<%= f.label "Namn" %><br>
		<%= f.text_field :name %><br>
		<%= f.label "Plats" %><br>
		<%= f.text_field :location %><br>
		<%= f.label "Datum" %><br>
		<%= f.text_field :date %><br>
		<%= f.label "Tid" %><br>
		<%= f.text_field :time %><br>
		<%= f.label "Beskriving" %><br>
		<%= f.text_area :description %><br>
		<% @scores.each do |score| %>
			<% if @performance.scores.include?(score.name) %>
				<%= check_box_tag "scores[]", score.name, true %>
			<% else %>
				<%= check_box_tag "scores[]", score.name %>
			<% end %>
			<%= score.name %><br>
		<% end %>
		<%= f.submit "Uppdatera framträdande" %>
	<% end %>
</div>
