<div>
	<br><br/><br>
	<h1>
		<% @infos.each do |info| %>
		<%= link_to "Hantera Extern Info", edit_info_path(info) %>
		<% end %>
	</h1>
	
	<h1>Hantera Spelningar</h1>
	<div class="framed">
		<table>
			<tbody>
				<% @performances.each do |perf| %>
					<tr>
						<td><%= perf.name %></td>
						<td><%= button_to "Ändra", edit_performance_path(perf), method: :get %></td>
						<td><%= button_to "Ta bort", perf, method: :delete %></td>
					</tr>
				<% end %>
				<tr><td><%= button_to "Lägg till spelning", new_performance_path, method: :get %></td></tr>
			</tbody>
		</table>
	</div>
	
	<h1>Hantera Noter</h1>
	<div class="framed">
		<table>
			<tbody>
				<% @scores.each do |score| %>
					<tr>
						<td><%= score.name %></td>
						<td><%= button_to "Ta bort", score, method: :delete %></td>
					</tr>
				<% end %>
				<tr><td><%= button_to "Ladda upp noter", new_score_path, method: :get %></td></tr>
			</tbody>
		</table>
	</div>
	
	<h1>Hantera Media</h1>
	<h3>Videor</h3>
	<div class="framed">
		<table>
			<tbody>
				<% @videos.each do |video| %>
					<tr>
						<td><%= video.name %></td>
						<td><%= button_to "Ta bort", video, method: :delete %></td>
					</tr>
				<% end %>
				<tr><td><%= button_to "Lägg till video", new_video_path, method: :get %></td></tr>
			</tbody>
		</table>
	</div>
	<h3>Bilder</h3>
	<div class="framed">
		<table>
			<tbody>
				<% @pictures.each do |picture| %>
					<tr>
						<td><%= picture.name %></td>
						<td><%= button_to "Ta bort", picture, method: :delete %></td>
					</tr>
				<% end %>
				<tr><td><%= button_to "Lägg till bild", new_picture_path, method: :get %></td></tr>
			</tbody>
		</table>
	</div>
	
</div>
